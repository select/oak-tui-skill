{
  "name": "git-worktree-manager",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bun run scripts/worktree-tui.ts",
    "dev": "bun run --watch scripts/worktree-tui.ts",
    "prepare": "simple-git-hooks",
    "lint": "oxlint && tsgolint",
    "lint:fix": "oxlint --fix",
    "lint:types": "tsgolint",
    "commitlint": "commitlint --edit"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged",
    "commit-msg": "bun commitlint --edit $1"
  },
  "lint-staged": {
    "*.ts": [
      "oxlint"
    ]
  },
  "dependencies": {
    "@opentui/core": "latest",
    "fuse.js": "7.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "bun-types": "1.3.9",
    "lint-staged": "16.2.7",
    "oxlint": "1.48.0",
    "oxlint-tsgolint": "0.14.0",
    "simple-git-hooks": "2.13.1"
  }
}
